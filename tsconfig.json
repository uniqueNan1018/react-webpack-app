{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx", // React 17以降ならこれでOK（React.createElement 不要）
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}